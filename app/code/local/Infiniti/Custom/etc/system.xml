<config>
    <sections>
        <infiniti_custom translate="label" module="infiniti_custom">
            <label>Custom Settings</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <sales_communication translate="label">
                    <label>Sales Communication Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <send_sms_customer_header translate="label">
                            <label>Order confirmation SMS to the customer</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_sms_customer_header>
                        <send_sms_customer_active translate="label">
                            <label>Enabled</label>
                            <config_path>infiniti_custom/sales_communication/send_sms_customer_active</config_path>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </send_sms_customer_active>
                        <send_sms_customer_message translate="label">
                            <label>Message</label>
                            <config_path>infiniti_custom/sales_communication/send_sms_customer_message</config_path>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Variables: {ORDER_ID}</comment>
                        </send_sms_customer_message>
                        <send_sms_operations_header translate="label">
                            <label>Order confirmation SMS to the Operations Team</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_sms_operations_header>
                        <send_sms_operations_active translate="label">
                            <label>Enabled</label>
                            <config_path>infiniti_custom/sales_communication/send_sms_operations_active</config_path>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </send_sms_operations_active>
                        <send_sms_operations_phoneno translate="label">
                            <label>Contact#</label>
                            <config_path>infiniti_custom/sales_communication/send_sms_operations_phoneno</config_path>
                            <frontend_type>text</frontend_type>
                            <sort_order>55</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Contact# separated by comma.]]></comment>
                        </send_sms_operations_phoneno>
                        <send_sms_operations_message translate="label">
                            <label>Message</label>
                            <config_path>infiniti_custom/sales_communication/send_sms_operations_message</config_path>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Variables: {ORDER_ID}</comment>
                        </send_sms_operations_message>
                        <send_email_operations_header translate="label">
                            <label>Order confirmation Email to the Operations Team</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_email_operations_header>
                        <send_email_operations_active translate="label">
                            <label>Enabled</label>
                            <config_path>infiniti_custom/sales_communication/send_email_operations_active</config_path>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </send_email_operations_active>
                        <send_email_operations_emails translate="label">
                            <label>Recipient email address</label>
                            <config_path>infiniti_custom/sales_communication/send_email_operations_emails</config_path>
                            <frontend_type>text</frontend_type>
                            <sort_order>85</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Email Ids separated by comma.]]></comment>
                        </send_email_operations_emails>
                        <send_email_operations_emails_sender translate="label">
                            <label>Sender Email Address</label>
                            <config_path>infiniti_custom/sales_communication/send_email_operations_emails_sender</config_path>
                            <frontend_type>text</frontend_type>
                            <sort_order>86</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_email_operations_emails_sender>
                        <send_email_operations_subject translate="label">
                            <label>Subject</label>
                            <config_path>infiniti_custom/sales_communication/send_email_operations_subject</config_path>
                            <frontend_type>text</frontend_type>
                            <sort_order>88</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_email_operations_subject>
                        <send_email_operations_message translate="label">
                            <label>Message</label>
                            <config_path>infiniti_custom/sales_communication/send_email_operations_message</config_path>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Variables: {ORDER_ID}</comment>
                        </send_email_operations_message>
                        <send_orderinfo_erp_header translate="label">
                            <label> ERP to sync order items</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_orderinfo_erp_header>
                        <send_orderinfo_erp_active translate="label">
                            <label>Enabled</label>
                            <config_path>infiniti_custom/sales_communication/send_orderinfo_erp_active</config_path>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </send_orderinfo_erp_active>
                    </fields>
                </sales_communication>
            </groups>
        </infiniti_custom>
    </sections>
</config>
